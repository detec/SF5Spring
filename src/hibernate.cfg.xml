<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
  <property name="hibernate.connection.driver_class">org.h2.Driver</property>
  <property name="hibernate.connection.url">${db.jdbcUrl}</property>
  <property name="hibernate.connection.username">sa</property>
  <property name="hibernate.connection.password"/>
  <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
  <property name="show_sql">true</property>
  <property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>
  <property name="hibernate.hbm2ddl.auto">update</property>
  <mapping class="org.openbox.sf5.db.Settings"/>
  <mapping class="org.openbox.sf5.db.Satellites"/>
  <mapping class="org.openbox.sf5.db.Transponders"/>
  <mapping class="org.openbox.sf5.db.ValueOfTheCarrierFrequency"/>
  <mapping class="org.openbox.sf5.db.TheDVBRangeValues"/>
  <mapping class="org.openbox.sf5.db.SettingsConversion"/>
  <mapping class="org.openbox.sf5.db.SettingsSatellites"/>
  <mapping class="org.openbox.sf5.db.Users"/>
 </session-factory>
</hibernate-configuration>
